{
  "name": "onai-platform",
  "version": "1.0.0",
  "description": "Complete ONAI platform - Built with Manus AI - Notes app, Marketing website, Payment system, and Email templates",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter onai-notes dev",
    "dev:all": "run-p dev:notes dev:marketing dev:payment",
    "dev:notes": "cd apps/notes-app && npm run dev",
    "dev:marketing": "cd apps/marketing-website && npm run dev",
    "dev:payment": "cd apps/payment-system && npm run dev",
    "build:all": "run-s build:notes build:marketing build:payment",
    "build:notes": "cd apps/notes-app && npm run build",
    "build:marketing": "cd apps/marketing-website && npm run build",
    "build:payment": "cd apps/payment-system && npm run build",
    "install:all": "npm install && cd apps/notes-app && npm install && cd ../marketing-website && npm install && cd ../payment-system && npm install",
    "deploy:all": "run-s deploy:notes deploy:marketing deploy:payment",
    "deploy:notes": "cd apps/notes-app && npm run build && echo 'Notes app built - ready for deployment'",
    "start": "pnpm dev",
    "deploy:marketing": "cd apps/marketing-website && npm run build && echo 'Marketing website built - ready for deployment'",
    "deploy:payment": "cd apps/payment-system && npm run build && echo 'Payment system built - ready for deployment'",
    "lint:all": "run-s lint:notes lint:marketing lint:payment",
    "lint:notes": "cd apps/notes-app && npm run lint",
    "lint:marketing": "cd apps/marketing-website && npm run lint",
    "lint:payment": "cd apps/payment-system && npm run lint",
    "test:all": "echo 'Running tests for all applications...'",
    "start:all": "run-p start:notes start:marketing start:payment",
    "start:notes": "cd apps/notes-app && npm start",
    "start:marketing": "cd apps/marketing-website && npm run preview",
    "start:payment": "cd apps/payment-system && npm run preview",
    "clean": "rimraf apps/*/dist apps/*/node_modules packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.10"
  },
  "keywords": [
    "onai",
    "notes",
    "ai",
    "knowledge-management",
    "marketing",
    "payment",
    "monorepo",
    "react",
    "vite",
    "tailwindcss",
    "manus-ai",
    "ai-generated",
    "autonomous-development"
  ],
  "author": "ONAI Team (Built with Manus AI)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hlsitechio/onai.git"
  },
  "bugs": {
    "url": "https://github.com/hlsitechio/onai/issues"
  },
  "homepage": "https://onai.com",
  "manus": {
    "platform": "https://manus.space",
    "built_with": "Manus AI Agent System",
    "development_method": "Autonomous AI Development",
    "ai_agent": "Manus AI",
    "creation_date": "2024-06-05",
    "applications": [
      "ONAI Notes App",
      "Marketing Website",
      "Payment System",
      "Email Templates"
    ]
  }
}
